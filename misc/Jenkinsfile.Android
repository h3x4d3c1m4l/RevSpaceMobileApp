pipeline {
    agent { docker { image 'dmitryordenov/xamarin-android-builder' } }
    stages {
		stage('init') {
			steps {
				script {
					def dockerHome = tool 'myDocker'
					env.PATH = "${dockerHome}/bin:${env.PATH}"
				}
			}
		}
		
        stage('build') {
            steps {
                sh 'msbuild build --project src/RevSpaceMobile.Android/RevSpaceMobile.Android.csproj'
            }
        }
    }
}